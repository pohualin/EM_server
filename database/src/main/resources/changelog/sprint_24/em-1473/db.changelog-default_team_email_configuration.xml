<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="change created_by and updated_by default_team_email_configuration" author="Matt">
        <dropColumn tableName="default_team_email_configuration" columnName="created_by"/>
        <dropColumn tableName="default_team_email_configuration" columnName="last_modified_by"/>
        <addColumn tableName="default_team_email_configuration">
            <column name="created_by" type="bigint"/>
            <column name="last_modified_by" type="bigint"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="default_team_email_configuration"
                                 baseColumnNames="created_by"
                                 constraintName="fk_default_team_email_configuration_created_by"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="default_team_email_configuration"
                                 baseColumnNames="last_modified_by"
                                 constraintName="fk_default_team_email_configuration_last_modified_by"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
        <createIndex tableName="default_team_email_configuration"
                     indexName="ix_default_team_email_configuration_created_by">
            <column name="created_by"/>
        </createIndex>
        <createIndex tableName="default_team_email_configuration"
                     indexName="ix_default_team_email_configuration_last_modified_by">
            <column name="last_modified_by"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>