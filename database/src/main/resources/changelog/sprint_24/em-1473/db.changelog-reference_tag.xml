<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="change created_by and updated_by reference_tag" author="Matt">
        <dropColumn tableName="reference_tag" columnName="created_by"/>
        <dropColumn tableName="reference_tag" columnName="last_modified_by"/>
        <addColumn tableName="reference_tag">
            <column name="created_by" type="bigint"/>
            <column name="last_modified_by" type="bigint"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="reference_tag"
                                 baseColumnNames="created_by"
                                 constraintName="fk_reference_tag_created_by"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="reference_tag"
                                 baseColumnNames="last_modified_by"
                                 constraintName="fk_reference_tag_last_modified_by"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
        <createIndex tableName="reference_tag" indexName="ix_reference_tag_created_by">
            <column name="created_by"/>
        </createIndex>
        <createIndex tableName="reference_tag" indexName="ix_reference_tag_last_modified_by">
            <column name="last_modified_by"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>