<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="change created_by and updated_by permission" author="Matt">
        <dropColumn tableName="permission" columnName="created_by"/>
        <dropColumn tableName="permission" columnName="last_modified_by"/>
        <addColumn tableName="permission">
            <column name="created_by" type="bigint"/>
            <column name="last_modified_by" type="bigint"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="permission"
                                 baseColumnNames="created_by"
                                 constraintName="fk_permission_created_by"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="permission"
                                 baseColumnNames="last_modified_by"
                                 constraintName="fk_permission_last_modified_by"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
        <createIndex tableName="permission" indexName="ix_permission_created_by">
            <column name="created_by"/>
        </createIndex>
        <createIndex tableName="permission" indexName="ix_permission_last_modified_by">
            <column name="last_modified_by"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>