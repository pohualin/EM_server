<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="change created_by and updated_by client_provider" author="Matt">
        <dropColumn tableName="client_provider" columnName="created_by"/>
        <dropColumn tableName="client_provider" columnName="last_modified_by"/>
        <addColumn tableName="client_provider">
            <column name="created_by" type="bigint"/>
            <column name="last_modified_by" type="bigint"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="client_provider"
                                 baseColumnNames="created_by"
                                 constraintName="fk_client_provider_created_by"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="client_provider"
                                 baseColumnNames="last_modified_by"
                                 constraintName="fk_client_provider_last_modified_by"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
        <createIndex tableName="client_provider" indexName="ix_client_provider_created_by">
            <column name="created_by"/>
        </createIndex>
        <createIndex tableName="client_provider" indexName="ix_client_provider_last_modified_by">
            <column name="last_modified_by"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>