            <column name="language_id" valueNumeric="1"/>
            <column name="message" value="Identificación del miembro"/>
            <column name="created_by" value="system"/>
        </insert>
        <insert tableName="strings">
            <column name="key_path" value="PATIENT_SELF_REG_LABEL_MEDICAL_RECORD_NUMBER_SPANISH"/>
            <column name="language_id" valueNumeric="1"/>
            <column name="message" value="Número de expediente médico"/>
            <column name="created_by" value="system"/>
        </insert>
        <insert tableName="strings">
            <column name="key_path" value="PATIENT_SELF_REG_LABEL_MRN_SPANISH"/>
            <column name="language_id" valueNumeric="1"/>
            <column name="message" value="NEM"/>
            <column name="created_by" value="system"/>
        </insert>
    </changeSet>

</databaseChangeLog>
