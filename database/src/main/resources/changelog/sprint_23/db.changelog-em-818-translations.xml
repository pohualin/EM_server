            <column name="created_by" value="system"/>
        </insert>
        <insert tableName="strings">
            <column name="key_path" value="PATIENT_SELF_REG_LABEL_MRN"/>
            <column name="language_id" valueNumeric="1"/>
            <column name="message" value="MRN"/>
            <column name="created_by" value="system"/>
        </insert>
        <insert tableName="strings">
            <column name="key_path" value="PATIENT_SELF_REG_LABEL_OTHER"/>
            <column name="language_id" valueNumeric="1"/>
            <column name="message" value="Other"/>
            <column name="created_by" value="system"/>
        </insert>
        <insert tableName="strings">
            <column name="key_path" value="PATIENT_SELF_REG_LABEL_PATIENT_ID"/>
