<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="normalizedName_for_client" author="Claudio">
        <addColumn tableName="client">
            <column name="normalized_name" type="varchar(255)"><constraints nullable="false"/> </column>
        </addColumn>
	</changeSet>
	
	<changeSet id="normalizedName_for_client_audit" author="Claudio">
        <addColumn tableName="client_audit">
            <column name="normalized_name" type="varchar(255)"><constraints nullable="false"/> </column>
        </addColumn>
	</changeSet>

	<changeSet id="addUniqueConstraint_normalized_name_client" author="claudio" >
        <addUniqueConstraint tableName="client" columnNames="normalized_name"
                             constraintName="uk_client_normalized_name"/>
	</changeSet>
	
</databaseChangeLog>