<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="add login_failure_count to users" author="Paul">
        <addColumn tableName="users">
        	<column name="login_failure_count" type="int" defaultValue="0" >
        		<constraints nullable="false"/>
        	</column>
        </addColumn>
        
        <addColumn tableName="users_audit">
            <column name="login_failure_count" type="int"/>
        </addColumn>
    </changeSet>
    
    <changeSet id="add account lock expiration timestamps" author="Paul">

        <addColumn tableName="users">
            <column name="lock_expiration_time_utc" type="timestamp"/>
        </addColumn>

        <addColumn tableName="users_audit">
            <column name="lock_expiration_time_utc" type="timestamp"/>
        </addColumn>

    </changeSet>

</databaseChangeLog>