            <column name="active" type="boolean">
            	<constraints nullable="false"/>
            </column>
        </createTable>
        
        <createTable schemaName="audit" tableName="default_team_print_instruction_configuration_audit">
            <column name="id" type="bigint">
                <constraints nullable="false"/>
