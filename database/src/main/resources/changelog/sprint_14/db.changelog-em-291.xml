<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    
    <changeSet id="update user_client table to store password last update timestamp" author="Paul">
		 <addColumn tableName="user_client">
            <column name="password_expiration_time_utc" type="timestamp"/>
        </addColumn>

        <addColumn tableName="user_client_audit">
            <column name="password_expiration_time_utc" type="timestamp"/>
        </addColumn>
    </changeSet>
    
</databaseChangeLog>