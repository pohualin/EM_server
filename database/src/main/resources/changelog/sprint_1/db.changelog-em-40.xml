<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2,postgresql"/>
    <property name="now" value="GETDATE()" dbms="mssql"/>

    <changeSet id="client_group_tables" author="Vinay">
        <createTable tableName="tag_group">
            <column name="id" type="bigint" autoIncrement="true"><constraints primaryKey="true"/></column>
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="INT"/>
            <column name="created_by" type="varchar(50)" defaultValue="system">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>            
            <column name="name" type="varchar(255)"><constraints nullable="false"/></column>
            <column name="client_id" type="bigint"/>
        </createTable>
        
        <createTable tableName="client_tag_group">            
            <column name="client_id" type="bigint"><constraints nullable="false"/></column>
            <column name="group_id" type="bigint"><constraints nullable="false"/></column>
        </createTable>
        <addPrimaryKey tableName="client_tag_group" columnNames="client_id,group_id"/>
        <addForeignKeyConstraint baseTableName="client_tag_group"
                                 baseColumnNames="client_id"
                                 constraintName="fk_client_tag_group_client_id"
                                 referencedTableName="client"
                                 referencedColumnNames="id"/>
		<addForeignKeyConstraint baseTableName="client_tag_group"
                                 baseColumnNames="group_id"
                                 constraintName="fk_client_tag_group_group_id"
                                 referencedTableName="tag_group"
                                 referencedColumnNames="id"/>
		<addForeignKeyConstraint baseTableName="tag_group"
                                 baseColumnNames="client_id"
                                 constraintName="fk_tag_group_client_id"
                                 referencedTableName="client"
                                 referencedColumnNames="id"/>     
                                       
        <createTable tableName="tag_group_audit">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="revision" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="revision_type" type="TINYINT"/>
            <column name="active" type="boolean"/>
            <column name="name" type="varchar(255)"/>
            <column name="client_id" type="bigint"/>
        </createTable>
        <addPrimaryKey tableName="tag_group_audit" columnNames="id, revision"/>
        
        <createTable tableName="client_tag_group_audit">            
            <column name="revision" type="BIGINT">
                <constraints nullable="false"/>
            </column>            
            <column name="client_id" type="bigint"><constraints nullable="false"/></column>
            <column name="group_id" type="bigint"><constraints nullable="false"/></column>
            <column name="revision_type" type="TINYINT"/>
        </createTable>
        <addPrimaryKey tableName="client_tag_group_audit" columnNames="revision,client_id,group_id"/>
    </changeSet>                                                   
</databaseChangeLog>