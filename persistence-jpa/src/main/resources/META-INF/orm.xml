<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
        version="2.0">

    <persistence-unit-metadata>
        <persistence-unit-defaults>
            <entity-listeners>
                <entity-listener class="org.springframework.data.jpa.domain.support.AuditingEntityListener"/>
            </entity-listeners>
        </persistence-unit-defaults>
    </persistence-unit-metadata>

    <mapped-superclass class="com.emmisolutions.emmimanager.model.AbstractAuditingEntity">
        <attributes>
            <basic name="createdBy" optional="false">
                <column name="created_by" nullable="false"/>
            </basic>
            <basic name="createdDate" optional="false">
                <column name="created_date" nullable="false"/>
            </basic>
            <basic name="lastModifiedBy" optional="false">
                <column name="last_modified_by" nullable="false"/>
            </basic>
            <basic name="lastModifiedDate" optional="false">
                <column name="last_modified_date" nullable="false"/>
            </basic>

        </attributes>

    </mapped-superclass>

    <entity class="com.emmisolutions.emmimanager.model.User">
        <table name="app_user"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <version name="version"/>
        </attributes>
    </entity>

</entity-mappings>