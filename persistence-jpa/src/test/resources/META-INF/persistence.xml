<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
    <persistence-unit name="EmmiManagerPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.emmisolutions.emmimanager.model.audit.UsernameRevisionEntity</class>
        <class>com.emmisolutions.emmimanager.model.User</class>
        <class>com.emmisolutions.emmimanager.model.Permission</class>
        <class>com.emmisolutions.emmimanager.model.Role</class>
        <class>com.emmisolutions.emmimanager.model.Client</class>
        <class>com.emmisolutions.emmimanager.model.SalesForce</class>
        <class>com.emmisolutions.emmimanager.model.TeamSalesForce</class>
        <class>com.emmisolutions.emmimanager.model.Location</class>
		<class>com.emmisolutions.emmimanager.model.Team</class>
        <class>com.emmisolutions.emmimanager.model.Group</class>
		<class>com.emmisolutions.emmimanager.model.Tag</class>
		<class>com.emmisolutions.emmimanager.model.TeamTag</class>
        <class>com.emmisolutions.emmimanager.model.ReferenceGroup</class>
		<class>com.emmisolutions.emmimanager.model.ReferenceTag</class>
        <class>com.emmisolutions.emmimanager.model.Strings</class>
        <class>com.emmisolutions.emmimanager.model.Language</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL9Dialect"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="org.hibernate.envers.audit_table_suffix" value="_audit"/>
            <property name="org.hibernate.envers.revision_field_name" value="revision"/>
            <property name="org.hibernate.envers.revision_type_field_name" value="revision_type"/>
        </properties>
    </persistence-unit>
</persistence>
